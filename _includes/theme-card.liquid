<div class='o-grid__col o-grid__col--2-4 {{ theme.type | downcase }}'>
  <div class='c-theme-card'>

    {% if theme.price %}
      <span class='c-theme-card__price'><sub>$</sub>{{ theme.price }}</span>
    {% else %}
      <span class='c-theme-card__price'>Free</span>
    {% endif %}

    <a href='{{ theme.url }}' title='{{ theme.title }}'>
      <div class='js-fadein c-theme-card__image' style='background-image: url(/{{ theme.thumbnail }})'></div>
    </a>

    <h2 class='c-theme-card__title'>
      <a class='c-theme-card__link' href='{{ theme.url }}'>{{ theme.name }} - {{ theme.type }}</a>
    </h2>

  </div>
</div>